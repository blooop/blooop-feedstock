+        ec_al_state_t slave_state)
+{
+    ec_ioctl_slave_state_t data;
+
+    data.slave_position = slave_position;
+    data.al_state = slave_state;
+    int ret;
+    ret = ioctl(master->fd, EC_IOCTL_SLAVE_STATE, &data);
